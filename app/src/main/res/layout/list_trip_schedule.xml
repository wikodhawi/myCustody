<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imgLogoTripSchedule"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_nawakara_bw" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblPTTripSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblJobTripSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/lblTimeTripSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08.00" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgProgressTripSchedule"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_check_in" />

    </LinearLayout>
</LinearLayout>